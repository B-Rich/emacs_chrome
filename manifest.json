{
  "name": "Edit with Emacs",
  "version": "1.4",
  "description": "Allow user to edit web-pages with Emacs.",
  "browser_action": {
    "default_icon": "emacs23-16x16.png"
  },
  "background_page": "background.html",
  "permissions": [
    "tabs",
    "http://127.0.0.1/edit/*"
  ],
  "icons":
  {
  "128" : "emacs.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": ["textareas.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
