{
	"name": "Edit with Emacs",
	"version": "1.12",
        "manifest_version": 2,
	"description": "Allow user to edit web-page textareas with Emacs (and other editors).",
	"browser_action": {
		"default_icon": "emacs23-16x16.png"
	},
        "background": {
	    "scripts": ["fancy-settings/source/lib/store.js",
			"xmlcomms.js",
			"context_menu.js"]
	},
	"permissions": [
		"tabs",
		"contextMenus",
		"http://127.0.0.1/edit/*"
	],
	"icons":
	{
		"128" : "emacs.png"
	},
	"options_page": "fancy-settings/source/index.html",
        "web_accessible_resources": [
	    "gumdrop.png"
	],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*", "file://*/*"],
			"css": ["textareas.css"],
			"js": ["textareas.js", "jquery-1.7.min.js", "jquery.color.min.js"],
			"run_at": "document_idle",
			"all_frames": true
		}
	]
}
